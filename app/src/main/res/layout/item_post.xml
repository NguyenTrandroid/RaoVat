<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp110"
        android:layout_margin="@dimen/dp2"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


            <ImageView
                android:id="@+id/iv_post"
                android:layout_width="@dimen/dp110"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp2"
                android:scaleType="fitXY"
                android:src="@drawable/ic_post_it" />

            <ImageView
                android:id="@+id/iv_numberImg"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp80"
                android:layout_marginTop="@dimen/dp2"
                android:src="@drawable/ic_photo_camera" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp90"
                android:layout_marginTop="@dimen/dp5"
                android:text="3"
                android:textColor="#fff"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/iv_post"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp30"
                android:layout_toRightOf="@id/iv_post"
                android:textColor="@color/red"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@id/iv_post"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="textStart"
                android:textSize="@dimen/sp13" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>